{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared": ["packages/shared/src/index.ts"],
      "@virtcon2/database-postgres": ["packages/database-postgres/src/index.ts"],
      "@virtcon2/ecs-net": ["packages/ecs-net/src/index.ts"],
      "@virtcon2/network-packet": ["packages/network-packet/src/index.ts"],
      "@virtcon2/network-world-entities": ["packages/network-world-entities/src/index.ts"],
      "@virtcon2/static-game-data": ["packages/static-game-data/src/index.ts"]
    },
    "typeRoots": ["node_modules/@types", "types"]
  },
  "exclude": ["node_modules", "tmp"]
}
